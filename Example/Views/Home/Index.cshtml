@model Example.Models.URLShort


@using (Html.BeginForm())
{
    <h1>URL Shortener</h1>
    <br />
    <p>By entering in a URL in the text field below, we will create a short URL for you!</p>
    <br />
    <form asp-action="Create">
        <div class="form-horizontal">
            <div class="input-group col-md-6">
                <input type="text" id="longurl" class="form-control" placeholder="URL you would like to have shortened" aria-label="By entering in a URL in the text field below, we will create a short URL for you!" aria-describedby="short">
                <div class="input-group-append">
                    <button class="btn btn-outline-secondary" type="button" id="short">Shorten</button>
                </div>
            </div>
            <fieldset>
                <br />
                <span id="result"></span>
            </fieldset>
        </div>
    </form>
}